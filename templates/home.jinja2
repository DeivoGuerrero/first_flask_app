{% extends 'base.jinja2' %}

{% block title %}
    Home Page
{% endblock title %}
{% block content %}
    <h1>Welcome</h1>
    <h2>Post:</h2>
    <ul>
        {% for post_id, post in posts.items() %}
        <li><a href="{{ url_for('post', post_id=post_id) }}">{{ post['title'] }}</a></li>
        {% endfor %}
    </ul>
    <a href="{{ url_for('create') }}">Create a new post</a>
{% endblock content %}